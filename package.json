{
  "name": "lass",
  "description": "Lass scaffolds a modern package boilerplate for Node.js",
  "version": "1.0.0",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
  "ava": {
    "failFast": true,
    "verbose": true,
    "files": [
      "test.js",
      "test-*.js",
      "test/**/*.js",
      "**/__tests__/**/*.js",
      "**/*.test.js",
      "template/test.js",
      "template/test-*.js",
      "template/test/**/*.js",
      "template/**/__tests__/**/*.js",
      "template/**/*.test.js"
    ]
  },
  "bin": "cli.js",
  "bugs": {
    "url": "https://github.com/lassjs/lass/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
    "Pablo Varela (http://pablo.life)",
    "Shaun Warman <shaunwarman1@gmail.com> (http://shaunwarman.com)"
  ],
  "dependencies": {
    "cac": "^5.0.12",
    "camelcase": "^5.0.0",
    "execa": "^1.0.0",
    "fixpack": "^2.3.1",
    "github-username": "^4.1.0",
    "github-username-regex": "^1.0.0",
    "global": "^4.3.2",
    "is-email": "^1.0.0",
    "is-url": "^1.2.4",
    "is-valid-npm-name": "^0.0.4",
    "npm-check-updates": "^2.14.2",
    "npm-conf": "^1.1.3",
    "opn": "^5.4.0",
    "sao": "^0.22.17",
    "semver": "^5.5.1",
    "shelljs": "^0.8.2",
    "spdx-license-list": "^4.1.0",
    "speakingurl": "^14.0.1",
    "superb": "^3.0.0",
    "update-notifier": "^2.5.0",
    "uppercamelcase": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "ava": "^0.25.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^2.7.0",
    "husky": "^1.0.1",
    "lint-staged": "^7.3.0",
    "multimatch": "^2.1.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.8",
    "xo": "^0.23.0"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "homepage": "https://lass.js.org",
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "ava",
    "boilerplate",
    "codecov",
    "es6",
    "es7",
    "flavored",
    "generator",
    "gfm",
    "github",
    "lass",
    "license",
    "license-generator",
    "markdown",
    "module",
    "np",
    "npm",
    "nyc",
    "package",
    "prettier",
    "project",
    "remark",
    "sao",
    "scaffold",
    "spdx",
    "starter",
    "xo",
    "yeoman"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "xo --fix",
        "npm run lint",
        "git add"
      ],
      "*.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "sao.js",
  "nyc": {
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lassjs/lass"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "max-lines": [
        "error",
        2000
      ],
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "err"
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "ignores": [
      "config.js"
    ]
  }
}
