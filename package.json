{
  "name": "lass",
  "description": "Lass scaffolds a modern package boilerplate for Node.js",
  "version": "0.3.7",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
  "bin": "cli.js",
  "ava": {
    "failFast": true,
    "verbose": true,
    "files": [
      "test.js",
      "test-*.js",
      "test/**/*.js",
      "**/__tests__/**/*.js",
      "**/*.test.js",
      "template/test.js",
      "template/test-*.js",
      "template/test/**/*.js",
      "template/**/__tests__/**/*.js",
      "template/**/*.test.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/lassjs/lass/issues",
    "email": "niftylettuce@gmail.com"
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
    "Pablo Varela (http://pablo.life)",
    "Shaun Warman <shaunwarman1@gmail.com> (http://shaunwarman.com)"
  ],
  "dependencies": {
    "auto-bind": "^1.2.0",
    "cac": "^5.0.10",
    "camelcase": "^5.0.0",
    "execa": "^0.10.0",
    "github-username": "^4.1.0",
    "github-username-regex": "^1.0.0",
    "global": "^4.3.2",
    "is-email": "^1.0.0",
    "is-url": "^1.2.4",
    "is-valid-npm-name": "^0.0.4",
    "npm-conf": "^1.1.3",
    "sao": "^0.22.17",
    "semver": "^5.5.0",
    "spdx-license-list": "^4.0.0",
    "speakingurl": "^14.0.1",
    "superb": "^2.0.0",
    "update-notifier": "^2.5.0",
    "uppercamelcase": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "codecov": "^3.0.2",
    "cross-env": "^5.1.6",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "multimatch": "^2.1.0",
    "nyc": "^11.8.0",
    "prettier": "^1.13.2",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.8",
    "xo": "^0.21.1"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "homepage": "https://lass.js.org",
  "keywords": [
    "ava",
    "boilerplate",
    "codecov",
    "es6",
    "es7",
    "flavored",
    "generator",
    "gfm",
    "github",
    "lass",
    "license",
    "license-generator",
    "markdown",
    "module",
    "np",
    "npm",
    "nyc",
    "package",
    "prettier",
    "project",
    "remark",
    "sao",
    "scaffold",
    "spdx",
    "starter",
    "xo",
    "yeoman"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ]
  },
  "main": "sao.js",
  "nyc": {
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lassjs/lass"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true,
    "ignores": [
      "config.js"
    ]
  }
}
